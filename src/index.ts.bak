import { BrowserWindow, BrowserWindowConstructorOptions } from "electron";

import optionsMap from "./options";

export default function electronUpdateWindowOptions(
  window: BrowserWindow,
  options: BrowserWindowConstructorOptions
) {
  Object.entries(options).forEach(([key, value]) => {
    optionsMap.forEach(optionValue => {
      if (Array.isArray(optionValue[0])) {
        const optionKeys = optionValue[0] as string[];
        const args = [];
        if (optionKeys[0] === key) {
          optionKeys.forEach(optionKey => {
            if (!Object.prototype.hasOwnProperty.call(options, optionKey)) {
              throw new TypeError(
                `If you have "${key}" you must have "${optionKey}"`
              );
            }
            args.push(options[optionKey]);
          });
        }
      } else {
        if (optionValue[0] === key) {
        }
      }
    });
  });
}
