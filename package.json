{
  "name": "electron-update-window-options",
  "version": "1.0.0",
  "description": "Update an electron window after it's already been created using the constructor options schema",
  "keywords": [
    "electron",
    "electron browser window",
    "electron window options",
    "electron window settings",
    "electron browser window options",
    "electron browser window settings",
    "update browser window settings",
    "update browser window options"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es5.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Eamon mikulec <boogie@mikulec.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocboogie/electron-update-window-options.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --pretty && rollup -c rollup.config.ts && rimraf compiled",
    "lint": "tslint -t codeFrame ./src/**/*.ts rollup.config.ts",
    "format": "prettier --write ./src/**/*.ts & npm run lint -- --fix",
    "test": "jest",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^21.1.9",
    "@types/node": "^8.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
